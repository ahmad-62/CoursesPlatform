@model IEnumerable<CoursesManagament.Models.Trainer>

@{
    ViewData["Title"] = "Trainers";
}

<h1>Trainers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            
         
            <th>
                @Html.DisplayNameFor(model => model.WebSite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>Courses</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WebSite)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td><a href="/Course/index/@item.Id">Courses</a> </td>
          
            <td>
                    <a href="/Trainer/edit/@item.Id">Edit</a> |
                    <a href="#" class="delete-link" data-toggle="modal" data-target="#DeleteModal" data-id="@item.Id">
                        Delete
                    </a>
                </td>
                <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Are You Sure?</h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                            <div class="modal-body">You will delete this Trainer.</div>
                            <div class="modal-footer">
                                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                                <a class="btn btn-danger" id="confirmDelete" href="#">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>


            </tr>
        }
    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.delete-link').click(function () {
            var TrainerId = $(this).data('id'); // Extract course ID from the clicked link
            var deleteUrl = '/Trainer/Delete/' + TrainerId; // Create the delete URL
            $('#confirmDelete').attr('href', deleteUrl); // Set the delete URL in the modal
        });
    });
</script>
